<body>

<header>
<img src="escudo-armazem.png" class="logo">
<h1>ArmazÃ©m FC</h1>
<p>Peneira Oficial 2026</p>
</header>

<div class="container">
<div class="form-card">
<h2>InscriÃ§Ã£o para Peneira</h2>

<form id="formPeneira">
<label>Nome Completo</label>
<input type="text" id="nome" required>

<label>Idade</label>
<input type="number" id="idade" required>

<label>Data de Nascimento</label>
<input type="date" id="data" required>

<label>Telefone</label>
<input type="tel" id="telefone" required>

<label>Categoria</label>
<select id="categoria" required>
<option value="">Selecione</option>
<option>Sub-13</option>
<option>Sub-15</option>
<option>Sub-17</option>
</select>

<button type="submit">Enviar InscriÃ§Ã£o âš½</button>
</form>

<table id="tabela">
<thead>
<tr>
<th>Nome</th>
<th>Idade</th>
<th>Categoria</th>
</tr>
</thead>
<tbody></tbody>
</table>

<button onclick="exportarExcel()">ðŸ“Š Exportar para Excel</button>

</div>
</div>

<footer>
Â© 2026 ArmazÃ©m FC - Bezerros PE
</footer>

<script>
const form=document.getElementById("formPeneira");
const tabela=document.querySelector("#tabela tbody");

function carregar(){
const inscritos=JSON.parse(localStorage.getItem("inscricoes"))||[];
tabela.innerHTML="";
inscritos.forEach(p=>{
tabela.innerHTML+=`
<tr>
<td>${p.nome}</td>
<td>${p.idade}</td>
<td>${p.categoria}</td>
</tr>`;
});
}

form.addEventListener("submit",function(e){
e.preventDefault();
const inscricao={
nome:nome.value,
idade:idade.value,
data:data.value,
telefone:telefone.value,
categoria:categoria.value
};
const inscritos=JSON.parse(localStorage.getItem("inscricoes"))||[];
inscritos.push(inscricao);
localStorage.setItem("inscricoes",JSON.stringify(inscritos));
form.reset();
carregar();
});

function exportarExcel(){
const inscritos=JSON.parse(localStorage.getItem("inscricoes"))||[];
if(inscritos.length===0){alert("Nenhum inscrito!");return;}
const dados=inscritos.map(p=>({
Nome:p.nome,
Idade:p.idade,
"Data de Nascimento":p.data,
Telefone:p.telefone,
Categoria:p.categoria
}));
const planilha=XLSX.utils.json_to_sheet(dados);
const livro=XLSX.utils.book_new();
XLSX.utils.book_append_sheet(livro,planilha,"Inscritos");
XLSX.writeFile(livro,"Inscricoes_ArmazemFC.xlsx");
}

carregar();
</script>

</body>
